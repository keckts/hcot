# ==============================================================================
# PROJECT CONFIGURATION
# ==============================================================================
# This is a Django boilerplate project. Customize it by copying this file to .env
# and updating the values below.

# Project Name - Used throughout the application
# Change this to your project name (appears in templates, emails, etc.)
PROJECT_NAME=hcot

# ==============================================================================
# DJANGO CORE SETTINGS
# ==============================================================================

# SECURITY WARNING: keep the secret key used in production secret!
# Generate a new one: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=django-insecure-change-this-in-production

# SECURITY WARNING: don't run with debug turned on in production!
# Set to False in production
DEBUG=True

# Comma-separated list of allowed hosts (no spaces)
# Example: example.com,www.example.com,api.example.com
ALLOWED_HOSTS=localhost,127.0.0.1

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================
# Choose your database engine: "sqlite3" (default) or "postgresql"
# SQLite is perfect for development, PostgreSQL is recommended for production

DATABASE_ENGINE=sqlite3

# ------------------------------------------------------------------------------
# PostgreSQL Settings (Only needed if DATABASE_ENGINE=postgresql)
# ------------------------------------------------------------------------------
# Requires: pip install psycopg2-binary
# Uncomment and configure when using PostgreSQL:

# DATABASE_NAME=hcot_db
# DATABASE_USER=your_username
# DATABASE_PASSWORD=your_password
# DATABASE_HOST=localhost
# DATABASE_PORT=5432
# DATABASE_CONNECT_TIMEOUT=10

# PostgreSQL Quick Setup:
# 1. Install PostgreSQL: https://www.postgresql.org/download/
# 2. Install driver: pip install psycopg2-binary
# 3. Create database: CREATE DATABASE hcot_db;
# 4. Create user: CREATE USER your_user WITH PASSWORD 'your_password';
# 5. Grant privileges: GRANT ALL PRIVILEGES ON DATABASE hcot_db TO your_user;
# 6. Update settings above and change DATABASE_ENGINE to postgresql
# 7. Run: python manage.py migrate

# ==============================================================================
# EMAIL CONFIGURATION
# ==============================================================================
# Email settings for password reset, verification codes, and notifications
# In DEBUG mode, emails are printed to console (no configuration needed)
# For production, set DEBUG=False and configure SMTP settings below

# SMTP Server Settings (Required for production email sending)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True

# SMTP Authentication
# For Gmail: Use app-specific password (https://myaccount.google.com/apppasswords)
# For other providers: Use your email credentials
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password-here

# Email Addresses
# These appear in the "From" field of sent emails
DEFAULT_FROM_EMAIL=noreply@yourdomain.com
SERVER_EMAIL=noreply@yourdomain.com

# Email Verification Settings
# Code expiry time in minutes (default: 10)
EMAIL_VERIFICATION_CODE_EXPIRY=10

# Cooldown between verification email requests in seconds (default: 60)
EMAIL_VERIFICATION_COOLDOWN=60

# ==============================================================================
# AUTHENTICATION SETTINGS
# ==============================================================================

# Account Authentication Method
# Options: "email", "username", "username_email"
ACCOUNT_AUTHENTICATION_METHOD=email

# Require username during signup (True/False)
ACCOUNT_USERNAME_REQUIRED=False

# Email Verification
# Options: "none", "optional", "mandatory"
ACCOUNT_EMAIL_VERIFICATION=mandatory

# Auto-login after email confirmation (True/False)
ACCOUNT_LOGIN_ON_EMAIL_CONFIRMATION=True

# Require unique email addresses (True/False)
ACCOUNT_UNIQUE_EMAIL=True

# Remember user sessions (True/False)
ACCOUNT_SESSION_REMEMBER=True

# ==============================================================================
# SESSION CONFIGURATION
# ==============================================================================

# Session cookie age in seconds (default: 1209600 = 2 weeks)
SESSION_COOKIE_AGE=1209600

# Expire session when browser closes (True/False)
SESSION_EXPIRE_AT_BROWSER_CLOSE=False

# Make session cookies HTTP-only (recommended: True)
SESSION_COOKIE_HTTPONLY=True

# ==============================================================================
# GOOGLE OAUTH SETTINGS
# ==============================================================================
# Optional: Enable Google OAuth login
# Get credentials at: https://console.cloud.google.com/apis/credentials

GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Google OAuth Scopes (comma-separated, no spaces)
GOOGLE_OAUTH_SCOPES=profile,email

# Google OAuth Access Type (online/offline)
GOOGLE_OAUTH_ACCESS_TYPE=online

# ==============================================================================
# URL CONFIGURATION
# ==============================================================================

# Redirect URLs after authentication actions
LOGIN_URL=/auth/login/
LOGIN_REDIRECT_URL=/dashboard/
LOGOUT_REDIRECT_URL=/

# Email confirmation redirect URLs
ACCOUNT_EMAIL_CONFIRMATION_AUTHENTICATED_REDIRECT_URL=/dashboard/
ACCOUNT_EMAIL_CONFIRMATION_ANONYMOUS_REDIRECT_URL=/auth/login/

# Account signup redirect URL
ACCOUNT_SIGNUP_REDIRECT_URL=/dashboard/

# ==============================================================================
# SECURITY SETTINGS (Production)
# ==============================================================================
# Uncomment and configure these for production deployments

# HTTPS/SSL Settings
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True

# Security Headers
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_INCLUDE_SUBDOMAINS=True
# SECURE_HSTS_PRELOAD=True
# SECURE_CONTENT_TYPE_NOSNIFF=True
# SECURE_BROWSER_XSS_FILTER=True
# X_FRAME_OPTIONS=DENY

# ==============================================================================
# STATIC & MEDIA FILES (Production)
# ==============================================================================
# Configure for production deployments with a web server

# Static files (CSS, JavaScript, Images)
# STATIC_ROOT=/var/www/hcot/static/
# STATIC_URL=/static/

# Media files (User uploads)
# MEDIA_ROOT=/var/www/hcot/media/
# MEDIA_URL=/media/

# ==============================================================================
# THIRD-PARTY INTEGRATIONS
# ==============================================================================

# Sentry Error Tracking (Optional)
# Get DSN at: https://sentry.io/
# SENTRY_DSN=

# AWS S3 Storage (Optional)
# For storing static/media files in production
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_STORAGE_BUCKET_NAME=
# AWS_S3_REGION_NAME=us-east-1
# AWS_S3_CUSTOM_DOMAIN=

# Redis Cache (Optional)
# For session storage and caching in production
# REDIS_URL=redis://localhost:6379/0

# ==============================================================================
# DEVELOPMENT SETTINGS
# ==============================================================================

# Django Debug Toolbar (automatically enabled when DEBUG=True)
# INTERNAL_IPS=127.0.0.1,localhost

# ==============================================================================
# TAILWIND CSS CONFIGURATION
# ==============================================================================

# Tailwind app name (usually "theme")
TAILWIND_APP_NAME=theme

# ==============================================================================
# LOGGING & MONITORING
# ==============================================================================

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log to file (True/False)
LOG_TO_FILE=False

# Log file path
# LOG_FILE_PATH=/var/log/hcot/django.log

# ==============================================================================
# SITE CONFIGURATION
# ==============================================================================

# Django Sites Framework ID (default: 1)
SITE_ID=1

# Site Domain (used for absolute URLs in emails)
# SITE_DOMAIN=example.com

# ==============================================================================
# PASSWORD VALIDATION
# ==============================================================================

# Minimum password length (default: 8)
PASSWORD_MIN_LENGTH=8

# Require numeric characters in password (True/False)
PASSWORD_REQUIRE_NUMERIC=True

# ==============================================================================
# NOTES
# ==============================================================================
# After updating this file:
# 1. Copy to .env: cp .env.example .env
# 2. Update values in .env with your actual credentials
# 3. NEVER commit .env to version control
# 4. Run migrations: python manage.py migrate
# 5. Create superuser: python manage.py createsuperuser
# 6. Run server: python manage.py runserver
